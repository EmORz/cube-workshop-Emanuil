
<h1>Delete Cube</h1>
<div class="form">
 <form action='/delete/{{cube._id}}' method="POST">
    <label for="name">Name</label>
    <input type="text" id="name" name="name" value="{{cube.name}}" disabled="true" />
    <label for="name">Description</label>
    <textarea id="name" name="description" disabled="true" />{{cube.description}}</textarea>
    <label for="image">ImageURL</label>
    <input type="text" id="image" name="imageURL" value="{{cube.imageUrl}}" disabled="true" />
    <label for="difficulty">Difficulty</label>
    <select id="difficulty" name="difficultyLevel" value="" disabled="true" >
  
    {{#each options}}
      {{#if this.selected}}
      <option value="{{@index}}" selected>{{this.title}}</option>
      {{else}}
      <option value="{{@index}}">{{this.title}}</option>
      {{/if}}
      {{/each }}
    </select> 
    <input type="submit" value="Delete" onclick="confirmDelete()">
      <a class="btn" href="/">Back</a>

  </form>
</div>

<script>
  function confirmDelete(){return confirm("Do you want to delete this record?")?true:false;}
</script>
